<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.mobileappexpert.testpng.MainActivity">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/root"
            android:layout_below="@+id/linearLayout1">

        <RelativeLayout
                android:id="@+id/planLayout"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:id="@+id/base_plan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_ba2"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
            android:id="@+id/layAssemblies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/darker_gray"
            android:weightSum="3.4">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/switch_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/swch"/>

            <ImageView
                    android:id="@+id/cabel"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/cable"/>
            <ImageView
                    android:id="@+id/fan"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ceilingfan"/>
            <!--<ImageView
                    android:id="@+id/ic_launcher"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_launcher"/>-->

            <Button
                    android:text="+"
                    android:id="@+id/buttonZoomIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <Button
                    android:text="-"
                    android:id="@+id/buttonZoomOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:id="@+id/cross"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/cross"/>
            <ImageView
                    android:id="@+id/rotate"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/rotate1" />

        </LinearLayout>

