<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobileappexpert.testpng.MainActivity" >

    <LinearLayout
        android:id="@+id/layAssemblies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/swch" />

            <ImageView
                android:id="@+id/img11"
                android:layout_width="70dp"
                android:layout_marginRight="20dp"
                android:layout_height="70dp"
                android:src="@drawable/cable" />
            <ImageView
                    android:id="@+id/img2"
                    android:layout_width="70dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ceilingfan" />
            <ImageView
                    android:id="@+id/img3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_launcher" />
            <ImageView
                    android:id="@+id/img6"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/cross" />
        </LinearLayout>

          <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" >

            <ImageView
                android:id="@+id/img4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/rotate1" />
        </FrameLayout>
          <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" >

            <ImageView
                android:id="@+id/img5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/rotate2" />
              
        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layAssemblies" >


        <com.mobileappexpert.testpng.TouchableImageView
            android:id="@+id/adsf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/img_ba2" />

        <RelativeLayout
                android:id="@+id/layLayerImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
